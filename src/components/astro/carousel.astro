---
import ReactCarousel from "../../components/react/carousel";
---

<div class="box" id="skill-carousel">
    <div class="h-full w-full fixed bg-black opacity-90" id="skill-overlay">
    </div>
    <div class="py-[50px] md:py-[80px] lg:py-[100px] xl:py-[120px]">
        <div class="carousel-box">
            <ReactCarousel client:only />
        </div>
    </div>
</div>
<style>
    .box {
        display: none;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0px;
        left: 0px;
        padding-left: 5px;
        padding-right: 5px;
        z-index: 10;
    }
    .carousel-box {
        width: 100vw;
    }

    @media (min-width: 1536px) {
        .carousel-box {
            max-width: 1536px;
        }
    }
</style>
<script>
    const box = document.getElementById("skill-carousel");
    const overlay = document.getElementById("skill-overlay");
    if (box) {
        overlay?.addEventListener("click", () => {
            box.style.display = "none";
        });
    }
</script>
